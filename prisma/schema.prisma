// Datasource & Generator
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// Enums
enum UserRole {
  VIEWER
  CREATOR
  ADMIN
}

enum Category {
  ANYTHING
  WEEKENDS
  DINING
  SHOPPING
  STAY
  TECH
}

// Users synced from Clerk
model User {
  id           String    @id @default(cuid())
  clerkId      String    @unique
  fullName     String
  email        String    @unique
  role         UserRole  @default(VIEWER)
  // Ye Event kis User ne banaya — wo relation banaya ja raha hai.
  events       Event[] // kis user ne event banaya uska relation, 1 User → many Events
  createdAt    DateTime  @default(now())
  lastSignedIn DateTime?
}

model Event {
  id            String   @id @default(cuid())
  // creatorId field me wo User ka ID save hota hai.
  // references: [id] ka matlab: Prisma ye dekhega ke User model me id field kis ki hai — aur creatorId us id se match karega.
  creator       User     @relation(fields: [creatorId], references: [id])
  creatorId     String
  creatorEmail  String
  organizer     String
  title         String
  description   String
  category      Category
  tags          String   @db.Text
  venue         String
  startDate     DateTime
  endDate       DateTime
  imageUrls     String   @db.Text
  ticketLink    String
  adminApproved Boolean  @default(false)
}

